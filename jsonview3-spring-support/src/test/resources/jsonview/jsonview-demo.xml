<jsonview-configuration
	xmlns="http://www.developframework.org/schema/jsonview3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.developframework.org/schema/jsonview3 
	http://www.developframework.org/schema/jsonview3/jsonview-configuration-3.0.xsd">

	<jsonview-package namespace="jsonview-demo">

		<jsonview id="user-list">
			<array data="users">
				<import id="user-detail"/>
			</array>
		</jsonview>

		<jsonview id="user-detail">
			<property data="id" />
			<property data="name" />
			<property-date data="birthday" />
			<mapping-object data="#favorites" source="id" target="userId"
				alias="favorite" type="multiple">
				<property data="userId" />
				<property data="item" />
			</mapping-object>
		</jsonview>
	</jsonview-package>
</jsonview-configuration>
